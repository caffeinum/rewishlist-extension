{
	"name": "Rewishlist â€“ Save on items people wish to refund",
	"version": "0.1.0",
	"description": "Save up to 40% on your wishlist! Shop refunded items directly from the buyer",
	"homepage_url": "https://rewishlist.store/install",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"activeTab",
		"storage"
	],
	"browser_action": {},
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["style.css", "fonts.chrome.css"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"background": {
		"persistent": false,
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	}
}
